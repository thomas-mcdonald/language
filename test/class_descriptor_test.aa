RETURN
END

PROC Hilux.mpg 0 0 0
RETURN
END

PROC Program.%main 0 0 0
CONST 4
GLOBAL Main
CONST 0
GLOBAL Lib.New
PCALL 2
CONST 0
GLOBAL Main.main
PCALL 1
RETURN
END


